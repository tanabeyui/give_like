<h1>楽天プレゼントランキング</h1>

<% @items.each_with_index do |item, i| %>
  <%= i + 1 %><br>
  <%= link_to item_path(item, name: item.name, code: item.code, price: item.price, shop: item.shop.name, image: item.medium_image_urls) do%>
    <%= image_tag (item['smallImageUrls'][0]) %>
  <% end %>
  <%= item.name %><br>
  <%= number_with_delimiter(item.price) %>円
  <hr>
<% end %>
