    <%= f.text_field :code_eq, :value => params[:code] %>

    <%= text_field_tag :search_min_age %>
    <%= text_field_tag :search_max_age %>

    <%= f.label :end_user_gender_eq, '性別' %>
    <%= f.radio_button :end_user_gender_eq, '0', id: "male" %>
