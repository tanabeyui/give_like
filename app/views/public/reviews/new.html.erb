    <script>
        var elem = document.getElementById('star');
        var opt = {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        scoreName: 'review[evaluation]',
        half: true
      };
      raty(elem,opt);
    </script>


      <div class="form-group row">
        <%= f.label :"レビュー本文", class: "col-form-label", for: "item_introduction" %>
        <div class="col-md-8">
          <%= f.text_area :body, class: "form-control", id: "item_introduction", rows:"6", placeholder:"ここに説明文を記述します" %>
        </div>
      </div>

      <div class="actions pt-3">
        <%= f.submit '新規登録', class:"btn btn-light bg-gold btn-block" %>
      </div>
    <% end %>